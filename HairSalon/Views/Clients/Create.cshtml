@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@model HairSalon.Models.Client

<h3>New Client</h3>
@if (@ViewBag.StylistCheck > 0)
{


  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)

    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId")

    @Html.LabelFor(model => model.ClientNotes, "Client Notes")
    @Html.EditorFor(model => model.ClientNotes)

    <input type="submit" value="Add Client">
  }
} 
else
{

  <p>You must add at least one stylist before adding clients</p>
  <p>@Html.ActionLink("Add Stylist", "Create", "Stylists")</p>
}